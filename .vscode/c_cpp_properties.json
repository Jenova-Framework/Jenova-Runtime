{
    "configurations": [
        {
            "name": "Windows-Clang",
            "includePath": [
                "Source",
                "Libs",
                "Libs/GodotSDK",
                "Libs/GodotSDK/godot_cpp",
                "Libs/Archive",
                "Libs/Curl",
                "Toolchain/x86_64-msvc/include"
            ],
            "defines": [
                "JENOVA_RUNTIME",
                "JENOVA_SDK_BUILD",
                "TYPED_METHOD_BIND",
                "_WIN32", "_WIN64"
            ],
            "compilerPath": "Toolchain/bin/clang-cl.exe",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "windows-clang-x64",
            "compilerArgs": [
                "-m64",
                "-O2",
                "-w"
            ]
        },
        {
            "name": "Linux-Clang",
            "includePath": [
                "Source",
                "Libs",
                "Libs/GodotSDK",
                "Libs/GodotSDK/godot_cpp", 
                "Libs/Archive",
                "Libs/Curl"
            ],
            "defines": [
                "JENOVA_RUNTIME",
                "JENOVA_SDK_BUILD",
                "TYPED_METHOD_BIND"
            ],
            "compilerPath": "/usr/bin/clang++",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "linux-clang-x64",
            "compilerArgs": [
                "-pthread",
                "-m64",
                "-O2",
                "-fPIC",
                "-w",
                "-lssl",
                "-lcrypto",
                "-ldl",
                "-lrt"
            ]
        }
    ],
    "version": 4
}
